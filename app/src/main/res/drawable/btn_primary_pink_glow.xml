<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#40FFFFFF">

    <item>
        <layer-list>

            <!-- Outer glow halo -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="999dp" />
                    <!-- semi-transparent neon around the pill -->
                    <solid android:color="#40FF3BCF" />
                </shape>
            </item>

            <!-- Inner pill -->
            <item
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp">
                <shape android:shape="rectangle">
                    <corners android:radius="999dp" />
                    <gradient
                        android:startColor="@color/pink_primary_light"
                        android:endColor="@color/pink_primary_dark"
                        android:angle="90" />
                    <stroke
                        android:width="2dp"
                        android:color="@color/pink_glow_edge" />
                    <padding
                        android:left="16dp"
                        android:top="12dp"
                        android:right="16dp"
                        android:bottom="12dp" />
                </shape>
            </item>

        </layer-list>
    </item>

</ripple>
