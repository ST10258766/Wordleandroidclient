<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dashboard_gradient"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingStart="0dp"
        android:paddingEnd="16dp"
        android:background="@android:color/transparent"
        app:title=""
        app:contentInsetStartWithNavigation="0dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/btnHowToTop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:background="@drawable/bg_icon_circle_gold"
            android:src="@drawable/ic_help"
            android:contentDescription="@string/help"
            app:tint="@android:color/white" />
    </com.google.android.material.appbar.MaterialToolbar>

    <ImageView
        android:id="@+id/imgLogoCenter"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:src="@drawable/wordrush_logo"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/app_name"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="80dp"
        android:padding="20dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Greeting -->
            <TextView
                android:id="@+id/tvGreeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dg_greeting"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:textSize="24sp"/>

            <!-- Streak -->
            <TextView
                android:id="@+id/chipStreak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:background="@drawable/bg_chip"
                android:text="@string/dg_streak_start"
                android:textColor="#FFD08A"
                android:textStyle="bold"/>

            <!-- Pick mode -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/dg_pick_mode"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"/>

            <!-- Quick actions -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:id="@+id/quickActionsRow"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!-- Daily -->
                    <LinearLayout
                        android:id="@+id/qaDaily"
                        android:orientation="vertical"
                        android:layout_width="88dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:gravity="center_horizontal"
                        android:background="@drawable/bg_icon_pill">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_dailywordle"
                            android:contentDescription="@string/qa_daily"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/qa_daily"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- Speedle -->
                    <LinearLayout
                        android:id="@+id/qaSpeedle"
                        android:orientation="vertical"
                        android:layout_width="88dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:gravity="center_horizontal"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/bg_icon_pill">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_speedlemode"
                            android:contentDescription="@string/qa_speedle"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/qa_speedle"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- Play vs AI -->
                    <LinearLayout
                        android:id="@+id/qaPlayAi"
                        android:orientation="vertical"
                        android:layout_width="88dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:gravity="center_horizontal"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/bg_icon_pill">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_multiplayer"
                            android:contentDescription="@string/qa_play_ai"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/qa_play_ai"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- Friends -->
                    <LinearLayout
                        android:id="@+id/qaFriends"
                        android:orientation="vertical"
                        android:layout_width="88dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:gravity="center_horizontal"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/bg_icon_pill">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_multiplayer"
                            android:contentDescription="@string/qa_friends"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/qa_friends"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- Leaderboard -->
                    <LinearLayout
                        android:id="@+id/qaLeaderboard"
                        android:orientation="vertical"
                        android:layout_width="88dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:gravity="center_horizontal"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/bg_icon_pill">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_leaderboard"
                            android:contentDescription="@string/qa_leaderboard"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/qa_leaderboard"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- Badges -->
                    <LinearLayout
                        android:id="@+id/qaBadges"
                        android:orientation="vertical"
                        android:layout_width="88dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:gravity="center_horizontal"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/bg_icon_pill">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_badges"
                            android:contentDescription="@string/qa_badges"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/qa_badges"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- Stats -->
                    <LinearLayout
                        android:id="@+id/qaStats"
                        android:orientation="vertical"
                        android:layout_width="88dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:gravity="center_horizontal"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/bg_icon_pill">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_stats"
                            android:contentDescription="@string/qa_stats"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/qa_stats"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- DAILY CARD -->
            <LinearLayout
                android:id="@+id/cardDaily"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_card_primary"
                android:padding="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/daily_title"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/tvDailyCountdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/daily_resets_in"
                    android:textColor="#CFEAFF"
                    android:layout_marginTop="6dp"/>

                <TextView
                    android:id="@+id/tvDailySub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/daily_play_today"
                    android:textColor="#EAF7FF"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>

            <!-- SPEEDLE CARD -->
            <LinearLayout
                android:id="@+id/cardSpeedle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_card_secondary"
                android:padding="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/speedle_title"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/speedle_sub"
                    android:textColor="#EAF7FF"
                    android:layout_marginTop="4dp"/>

                <RadioGroup
                    android:id="@+id/rgSpeedle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <RadioButton
                        android:id="@+id/rb60"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/speedle_60"
                        android:textColor="@android:color/white"/>

                    <RadioButton
                        android:id="@+id/rb90"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/speedle_90"
                        android:layout_marginStart="16dp"
                        android:textColor="@android:color/white"/>

                    <RadioButton
                        android:id="@+id/rb120"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/speedle_120"
                        android:layout_marginStart="16dp"
                        android:textColor="@android:color/white"/>
                </RadioGroup>

                <Button
                    android:id="@+id/btnSpeedleStart"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/btn_primary_glow"
                    android:text="@string/speedle_start"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <!-- AI CARD -->
            <LinearLayout
                android:id="@+id/cardPlayAi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_card_tertiary"
                android:padding="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ai_title"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ai_sub"
                    android:textColor="#EAF7FF"
                    android:layout_marginTop="4dp"/>

                <Button
                    android:id="@+id/btnAI"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/btn_primary_glow"
                    android:text="@string/ai_start"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <!-- Leaderboard + Badges -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:id="@+id/cardLeaderboard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:background="@drawable/bg_card_leaderboard">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/leaderboard_title"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/leaderboard_sub"
                        android:textColor="#F6E9FF"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <Space
                    android:layout_width="12dp"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:id="@+id/cardBadges"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:background="@drawable/bg_card_badges">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/badges_title"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/badges_sub"
                        android:textColor="#3D2A00"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_nav_blur"
        app:itemIconTint="@null"
        app:itemTextColor="@color/nav_item"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
