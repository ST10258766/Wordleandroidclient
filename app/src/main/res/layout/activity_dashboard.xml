<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dashboard_gradient"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingStart="0dp"
        android:paddingEnd="16dp"
        android:background="@android:color/transparent"
        app:title=""
        app:contentInsetStartWithNavigation="0dp">



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/btnHowToTop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:background="@drawable/bg_icon_circle_gold"
            android:src="@drawable/ic_help"
            android:contentDescription="@string/help"
            app:tint="@android:color/white" />
    </com.google.android.material.appbar.MaterialToolbar>

    <ImageView
        android:id="@+id/imgLogoCenter"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:src="@drawable/wordrush_logo"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/app_name"/>


    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="80dp"
        android:padding="20dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Greeting + streak -->
            <TextView
                android:id="@+id/tvGreeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Good evening,"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/chipStreak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:background="@drawable/bg_chip"
                android:text="Start a streak today"
                android:textColor="#FFD08A"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Pick a mode to start playing \uD83D\uDC47"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"/>

            <!-- Quick actions row (horizontal) -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="false"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:id="@+id/quickActionsRow"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!-- QA: Daily -->
                    <LinearLayout
                        android:id="@+id/qaDaily"
                        android:orientation="vertical"
                        android:layout_width="88dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:gravity="center_horizontal"
                        android:background="@drawable/bg_icon_pill">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_dailywordle"
                            android:contentDescription="Daily"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Daily"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- QA: Speedle -->
                    <LinearLayout
                        android:id="@+id/qaSpeedle"
                        android:orientation="vertical"
                        android:layout_width="88dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:gravity="center_horizontal"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/bg_icon_pill">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_speedlemode"
                            android:contentDescription="Speedle"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Speedle"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- QA: Play vs AI -->
                    <LinearLayout
                        android:id="@+id/qaPlayAi"
                        android:orientation="vertical"
                        android:layout_width="88dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:gravity="center_horizontal"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/bg_icon_pill">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_multiplayer"
                            android:contentDescription="Play vs AI"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Play vs AI"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- QA: Friends -->
                    <LinearLayout
                        android:id="@+id/qaFriends"
                        android:orientation="vertical"
                        android:layout_width="88dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:gravity="center_horizontal"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/bg_icon_pill">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_multiplayer"
                            android:contentDescription="Friends"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Friends"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- QA: Leaderboard -->
                    <LinearLayout
                        android:id="@+id/qaLeaderboard"
                        android:orientation="vertical"
                        android:layout_width="88dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:gravity="center_horizontal"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/bg_icon_pill">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_leaderboard"
                            android:contentDescription="Leaderboard"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Leaderboard"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- QA: Badges -->
                    <LinearLayout
                        android:id="@+id/qaBadges"
                        android:orientation="vertical"
                        android:layout_width="88dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:gravity="center_horizontal"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/bg_icon_pill">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_badges"
                            android:contentDescription="Badges"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Badges"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- QA: Stats -->
                    <LinearLayout
                        android:id="@+id/qaStats"
                        android:orientation="vertical"
                        android:layout_width="88dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:gravity="center_horizontal"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/bg_icon_pill">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_stats"
                            android:contentDescription="Stats"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Stats"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>


                </LinearLayout>
            </HorizontalScrollView>

            <!-- Daily WordRush (primary card) -->
            <LinearLayout
                android:id="@+id/cardDaily"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_card_primary"
                android:padding="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily WordRush"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/tvDailyCountdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resets in 00:00:00"
                    android:textColor="#CFEAFF"
                    android:layout_marginTop="6dp"/>

                <TextView
                    android:id="@+id/tvDailySub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Play todayâ€™s puzzle"
                    android:textColor="#EAF7FF"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>

            <!-- Speedle (card with radio and button) -->
            <LinearLayout
                android:id="@+id/cardSpeedle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_card_secondary"
                android:padding="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speedle Mode"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beat the clock!"
                    android:textColor="#EAF7FF"
                    android:layout_marginTop="4dp"/>

                <RadioGroup
                    android:id="@+id/rgSpeedle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <RadioButton
                        android:id="@+id/rb60"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="60s"
                        android:textColor="@android:color/white"/>

                    <RadioButton
                        android:id="@+id/rb90"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="90s"
                        android:layout_marginStart="16dp"
                        android:textColor="@android:color/white"/>

                    <RadioButton
                        android:id="@+id/rb120"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="120s"
                        android:layout_marginStart="16dp"
                        android:textColor="@android:color/white"/>
                </RadioGroup>

                <Button
                    android:id="@+id/btnSpeedleStart"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/btn_primary_glow"
                    android:text="Start Speedle"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <!-- Play vs AI (card) -->
            <LinearLayout
                android:id="@+id/cardPlayAi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_card_tertiary"
                android:padding="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Play vs AI"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Race a smart opponent with the same word."
                    android:textColor="#EAF7FF"
                    android:layout_marginTop="4dp"/>

                <Button
                    android:id="@+id/btnAI"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/btn_primary_glow"
                    android:text="Start AI battle"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <!-- Leaderboard + Badges mini-cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:id="@+id/cardLeaderboard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:background="@drawable/bg_card_leaderboard">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Leaderboard"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See global rankings"
                        android:textColor="#F6E9FF"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <Space
                    android:layout_width="12dp"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:id="@+id/cardBadges"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:background="@drawable/bg_card_badges">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Badges"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View your achievements"
                        android:textColor="#3D2A00"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_nav_blur"
        app:itemIconTint="@null"
        app:itemTextColor="@color/nav_item"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
