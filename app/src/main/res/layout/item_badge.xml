<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/bg_section_card"
    android:gravity="center_vertical"
    android:layout_margin="6dp">

    <ImageView
        android:id="@+id/imgBadge"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_daily_badge1"
        android:contentDescription="Badge icon" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Badge title"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Requirement or Unlocked"
            android:textColor="#CFEAFF"
            android:textSize="13sp"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</LinearLayout>
