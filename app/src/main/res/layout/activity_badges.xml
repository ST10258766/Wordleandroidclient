<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dashboard_gradient"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvBadgesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Badges"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginBottom="12dp" />

    <!-- Main dynamic list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerBadges"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="12dp" />

    <!-- Optional small label above your old cute tiles -->
    <TextView
        android:id="@+id/tvMilestonesHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Milestones"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp" />

    <!-- Your original 2 cards kept at the bottom -->
    <GridLayout
        android:id="@+id/gridBadges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:useDefaultMargins="true">

        <!-- Badge tile 1 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:background="@drawable/bg_section_card"
            android:padding="14dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_badges"
                android:contentDescription="Badge" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Streaker I"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3-day streak"
                android:textColor="#CFEAFF" />

            <TextView
                android:id="@+id/badge1Progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="2/3"
                android:textColor="#8EE7FF" />
        </LinearLayout>

        <!-- Badge tile 2 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:background="@drawable/bg_section_card"
            android:padding="14dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_badges"
                android:contentDescription="Badge" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Daily Devotee I"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 dailies completed"
                android:textColor="#CFEAFF" />

            <TextView
                android:id="@+id/badge2Progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="1/5"
                android:textColor="#8EE7FF" />
        </LinearLayout>

    </GridLayout>

</LinearLayout>
