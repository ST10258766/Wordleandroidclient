<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_welcome_gradient"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Push everything slightly DOWN so itâ€™s centered visually -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.7" />

        <!-- Logo -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:src="@drawable/wordrush_logo"
            android:contentDescription="@string/app_name" />

        <!-- Main Title -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="@string/welcome_title"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@android:color/white"/>

        <!-- Tagline -->
        <TextView
            android:id="@+id/tvWelcomeSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:gravity="center"
            android:alpha="0.85"
            android:text="@string/welcome_subtitle"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <!-- CTA Button -->
        <Button
            android:id="@+id/btnGetStarted"
            android:layout_width="220dp"
            android:layout_height="56dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_primary_glow"
            android:text="@string/btn_begin"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <!-- Push everything slightly UP so it balances visually -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1.3" />

    </LinearLayout>
</FrameLayout>
